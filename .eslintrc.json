{
    "env": {
        "node": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "settings": {
        "import/resolver": {
            "node": {
              "extensions": [
                ".ts",
                ".tsx"
              ]
            }
          }
    },
    "rules": {
        "import/extensions": [2, {
            "ts": "never",
            "tsx": "never",
            "json": "never"
            }],
        "react/jsx-filename-extension": [2, { "extensions": [".tsx", ".json"] }],
        "@typescript-eslint/explicit-module-boundary-types": 0
    }
}
